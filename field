#Import tkinter module 
import tkinter 

#Create a window 
window = tkinter.Tk() 
window.title("Sign Up") 

# Create a logo 
logo = tkinter.PhotoImage(file="./images/logo.png") 

# Set the window background color 
window.configure(background ='white') 

# Set the window size 
window.geometry("650x650") 

# Set the window's title 
window.title("Sign Up") 

# Create label 
label = tkinter.Label(window, 
							image = logo, 
							bg = "white") 

# Position the label 
label.grid(row = 0, column = 0, 
				columnspan = 2, padx = 10, 
				pady = 10) 

# Create radio buttons 
radio_male = tkinter.Radiobutton(window, 
								text ="Male", 
								value = 1) 

# Position the radio buttons 
radio_male.grid(row = 1, column = 0, 
					sticky = 'E', padx = 10, 
					pady = 10) 

# Create radio buttons 
radio_female = tkinter.Radiobutton(window, 
								text ="Female", 
								value = 2) 

# Position the radio buttons 
radio_female.grid(row = 1, column = 1, 
					sticky = 'W', padx = 10, 
					pady = 10) 

# Create label 
user_label = tkinter.Label(window, 
						text = "Username", 
						bg = "white") 

# Position the label 
user_label.grid(row = 2, column = 0, 
						padx = 10, pady = 10) 

# Create entry 
user_entry = tkinter.Entry(window) 

# Position the entry 
user_entry.grid(row = 2, column = 1, 
						padx = 10, pady = 10) 

# Create label 
pass_label = tkinter.Label(window, 
						text ="Password", 
						bg = "white") 

# Position the label 
pass_label.grid(row = 3, column = 0, 
						padx = 10, pady = 10) 

# Create entry 
pass_entry = tkinter.Entry(window) 

# Position the entry 
pass_entry.grid(row = 3, column = 1, 
						padx = 10, pady = 10) 

# Create login button 
login_btn = tkinter.Button(window, 
						text = "Login", 
						width = 12) 

# Position the button 
login_btn.grid(row = 4, column = 0, 
						padx = 10, pady = 10) 

# Create sign up button 
signup_btn = tkinter.Button(window, 
						text = "Sign Up", 
						width = 12) 

# Position the button 
signup_btn.grid(row = 4, column = 1, 
						padx = 10, pady = 10) 

# Run the window 
window.mainloop()